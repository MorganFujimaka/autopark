<div class="col-md-7">
  <h4>Sign up with form</h4>

  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :id => 'signup_form'}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, label: false, required: true, placeholder: 'Email', autofocus: true %>
      <%= f.input :password, label: false, required: true, placeholder: 'Password' %>
      <%= f.input :password_confirmation, label: false, required: true, placeholder: 'Password Confirmation' %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" %>
    </div>
  <% end %>
</div>

<div class="col-md-5">
  <h4>Or with socials</h4>
  <a class="btn btn-block btn-social btn-facebook" href="/users/auth/facebook">
    <i class="fa fa-facebook"></i> Sign in with Facebook
  </a>
</div>
