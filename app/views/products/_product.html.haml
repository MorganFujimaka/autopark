%tr{product_id: "#{product.id}"}
  %td= link_to product.title, product
  - if user_signed_in? && current_user.is_admin
    %td.col-md-2= link_to("Edit", edit_product_path(product), class: "btn btn-default btn-xs") + " " + link_to("Delete", product, method: :delete, data: {confirm: "Delete product?"}, class: "btn btn-danger btn-xs", id: "delete-product")